<div class="jumbotron jumbotron-fluid p-3 mb-2 bg-warning text-dark">
  <div class="container text-center">
    <img src="/assets/images/burger.png" class="rounded mx-auto d-block" style="max-width:10%;" >
    <h1 class="display-4">Eat-Da-Burger!</h1>    
  </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 text-center">
                <h2 class="card-header">Ready to be Devoured</h2>
                <ul class="list-group">
                    {{#each burgers}}
                        {{#unless devoured}}
                        {{> burgers/burger-block devoured=true}}
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-md-6 text-center">
                <h2 class="card-header">You did it!</h2>
                <ul class="list-group">
                    {{#each burgers}}
                        {{#if devoured}}
                            {{> burgers/burger-block devoured=false}}
                        {{/if}}                    
                    {{/each}}
                </ul>
            </div>
        </div>
            
    </div>
    <div class="card-footer text-center">
            <h2>Add Burger</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="bu">Burger Name:</label>
                    <input type="text" id="bu" name="burger_name">
                </div>
                <button type="submit" class="btn btn-primary">Add Burger</button>
            </form>
    </div>   
    
</div>



